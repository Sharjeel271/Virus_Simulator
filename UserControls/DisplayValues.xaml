<UserControl x:Class="Virus_Simulator_Intepface.UserControls.DisplayValues"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Virus_Simulator_Intepface.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <TextBlock Name ="HealthyText" Text="Heathy:" Grid.Row="0" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap"/>
        <TextBlock Name ="TotalInfectedText" Text="Infected:" Grid.Row="1" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap"/>
        <TextBlock Name ="TotalDeadText" Text="Dead:" Grid.Row="2" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap"/>
        <TextBlock Name ="TotalImmuneText" Text="Immune:" Grid.Row="3" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap"/>

        <TextBlock Name ="HealthyVal" Grid.Column="1" Grid.Row="0" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap"/>
        <TextBlock Name ="TotalInfectedVal" Text="0" Grid.Column="1" Grid.Row="1" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap"/>
        <TextBlock Name ="TotalDeadVal" Text="0" Grid.Column="1" Grid.Row="2" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap"/>
        <TextBlock Name ="TotalImmuneVal" Text="0" Grid.Column="1" Grid.Row="3" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
