<UserControl x:Class="Virus_Simulator_Intepface.UserControls.InputFields"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Virus_Simulator_Intepface.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="115"/>
            <RowDefinition Height="115"/>
            <RowDefinition Height="115"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text = "Infection Rate" FontSize="15" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text = "Survival Rate" FontSize="15" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="2" Text = "Immunity Chance" FontSize="15" HorizontalAlignment="Center"/>

        <local:NumericField x:Name="InfectionRate" Grid.Row="0"/>
        <local:NumericField x:Name="SurvivalRate" Grid.Row="1"/>
        <local:NumericField x:Name="ImmunityChance" Grid.Row="2"/>
    </Grid>
</UserControl>
