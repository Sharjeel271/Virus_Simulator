<UserControl x:Class="Virus_Simulator_Intepface.UserControls.NumericField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Virus_Simulator_Intepface.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Name="InputField" Background="AliceBlue" Text="{Binding InputValue, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Width=" 100" Height="50" TextChanged="InputField_TextChanged" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</UserControl>
